pipeline {
    agent any

    tools {
        maven "MAVEN_HOME"
    }

    stages {
        stage ('DAST') {
            steps {
                sh '''
                mkdir reports || true
                touch reports/zap-baseline-scan.html || true
                docker run -v $(pwd):/zap/wrk/:rw -t ghcr.io/zaproxy/zaproxy:stable zap-baseline.py \
    -t http://testphp.vulnweb.com -g gen.conf -r reports/zap-baseline-scan.html || true
                '''
            }
        }
    }

    post {
        always {
            publishHTML([allowMissing: false, alwaysLinkToLastBuild: true, keepAll: true, reportDir: 'reports', reportFiles: 'zap-baseline-scan.html', reportName: 'DAST Report', reportTitles: 'Dast Report', useWrapperFileDirectly: true])
            }
        }
    }