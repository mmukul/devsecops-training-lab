pipeline {
    agent any

    stages {
        stage('Start ZAP Scan') {
            steps {
                echo 'Starting OWASP ZAP security scan...'
                
                sh '''
                mkdir reports || true
                docker run -v $(pwd):/zap/wrk/:rw --user root -t ghcr.io/zaproxy/zaproxy:stable zap-baseline.py -t http://www.vulnweb.com -g gen.conf -r reports/zap-report.html
                '''
            }
        }
    }

    post {
        always {
            echo 'Publishing ZAP Security Report...'

            publishHTML (target: [
                reportDir: 'reports',
                reportFiles: 'zap-report.html',
                reportName: 'OWASP ZAP Security Report',
                keepAll: true,
                alwaysLinkToLastBuild: false,
                allowMissing: false
            ])
        }
    }
}